<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Winner_For_Closed_Auction</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Closed&quot;),
    ISBLANK(Winner__c)
)</errorConditionFormula>
    <errorDisplayField>Winner__c</errorDisplayField>
    <errorMessage>Winner must be selected before closing the auction.</errorMessage>
</ValidationRule>
